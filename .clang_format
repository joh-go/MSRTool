# C++20-Projekt: klare, moderne Formatierung
BasedOnStyle: LLVM
Language:        Cpp
Standard:        c++20

# Allgemeine Formatregeln
IndentWidth:     4
TabWidth:        4
UseTab:          Never
BreakBeforeBraces: Allman  # Alternativ: Attach, Linux, Mozilla

# Leerzeichen
SpaceBeforeParens: ControlStatements
SpaceAfterCStyleCast: true

# Klammern & Zeilenumbruch
AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false
AlwaysBreakTemplateDeclarations: Yes
AlwaysBreakAfterReturnType: TopLevel
ConstructorInitializerAllOnOneLineOrOnePerLine: true

# Includes
IncludeBlocks: Preserve
SortIncludes: true

# Namespace & Zugriff
IndentAccessModifiers: true
NamespaceIndentation: All

# Kommentare
CommentPragmas: '^ IWYU pragma:'

# Modernes C++
Cpp11BracedListStyle: true
DerivePointerAlignment: false
PointerAlignment: Left

# Anpassungen f√ºr clang-format 13+
ReflowComments: true
SortUsingDeclarations: true

# Optional: Formatierung in Makros zulassen
DisableFormat: false
